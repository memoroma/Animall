<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Product.Product">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="طلباتي"
                android:textColor="#a60000"
                android:textSize="20dp" />
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:background="#e7e7e7"
            android:id="@+id/card_lyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/lyt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/receclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#e7e7e7"
                    android:visibility="visible"
                    android:paddingBottom="4dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:background="@color/white"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".48"
                            android:weightSum="1"
                            >
                            <TextView
                                android:gravity="center"
                                android:layout_weight=".5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="رسوم الشحن"
                                android:textColor="@color/textcolor"
                                />
                            <TextView
                                android:gravity="center"
                                android:layout_weight=".5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="54 ريال سعودى"
                                android:textColor="#6b59ef"
                                />
                        </LinearLayout>
                        <View
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="#e7e7e7"
                            android:layout_weight=".006"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".48"
                            android:weightSum="1"
                            >
                            <TextView
                                android:gravity="center"
                                android:layout_weight=".5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="اجمالى المبلغ المستحق"
                                android:textColor="@color/textcolor"
                                />
                            <TextView
                                android:id="@+id/allcost"
                                android:gravity="center"
                                android:layout_weight=".5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="542.3"
                                android:textColor="#fb5b5b"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/gotoOrderCycle"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#63b6df"
                        android:text="توجه الى الدفع"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/show_details_scroll_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/product_detail_background"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@id/view"
                    android:src="@drawable/ic_close" />

                <LinearLayout
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_margin="50dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/heart_notactive" />

                        <LinearLayout
                            android:id="@+id/price_lyt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/like"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="250" />

                            <TextView
                                android:id="@+id/new_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="200 SR"
                                android:textColor="@color/milky"
                                android:textSize="18sp" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="اعلاف الدواجن مصانع ابو الريش"
                            android:textColor="#a60000"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/address_lyt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/address_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:maxWidth="100dp"
                                android:text="الرياض, الملكة العربية السعودية"
                                android:textColor="#4149e9"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/placeholder_filled_point" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rating_lyt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/address_lyt"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/rate_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="4"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.MaterialRatingBar.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:numStars="5"
                                android:rating="4"
                                android:stepSize="1"
                                app:mrb_progressTint="#fdc003" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rating_lyt"
                            android:layout_alignParentEnd="true"
                            android:maxWidth="200dp"
                            android:text="من خلال مصنعنا يمكنك الحصول علي افضل انواع الاعلاف"
                            android:textColor="#a60000"
                            android:textSize="13sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text"
                            android:layout_alignParentEnd="true"
                            android:text="التعليقات : 35"
                            android:textColor="#79b338"
                            android:textSize="12dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".08"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:text="شارك"
                            android:textColor="#79b338" />

                        <TextView
                            android:id="@+id/card_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="اضف للسلة"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:text="متجر البائع"
                            android:textColor="#79b338" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:id="@+id/modify_quntity_scroll_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/product_detail_background"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_quenty"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@id/modify_view"
                    android:src="@drawable/ic_close" />

                <LinearLayout
                    android:id="@+id/modify_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="50dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الكمية المطلوبة"
                        android:textColor="@color/textcolor"
                        android:gravity="center"
                        />
                        <EditText
                            android:id="@+id/quantity_edt"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/background_quantity_edt"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="30dp"
                            android:text="1.0"
                            android:inputType="numberDecimal"
                            />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="طن"
                            android:textColor="@color/textcolor"
                            android:gravity="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/update_quantity_txt"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/product_detail_background"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حفظ"
                        />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>