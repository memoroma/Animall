<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="310dp"
    android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <ImageView
            android:id="@+id/like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/heart_notactive"
            />
        <LinearLayout
            android:id="@+id/price_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/like"
            >

            <TextView
                android:text="250"
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="200 SR"
                android:textColor="@color/milky"
                android:id="@+id/new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/online_store_lyt"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/price_lyt"
            >
            <ImageView
                android:id="@+id/online_store"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/online_store"
                />
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/add_to_card"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/buy_icon_32"
                />
        </LinearLayout>
        <TextView
            android:textColor="#6b59ef"
            android:textSize="15dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تواصل مع البائع مباشرة"
            android:layout_below="@id/online_store_lyt"
            />

        <TextView
            android:id="@+id/title"
            android:textSize="16sp"
            android:textColor="#a60000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="اعلاف الدواجن مصانع ابو الريش"
            />
        <TextView
            android:maxWidth="200dp"
            android:layout_below="@id/title"
            android:id="@+id/text"
            android:textSize="13sp"
            android:textColor="#a60000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="من خلال مصنعنا يمكنك الحصول علي افضل انواع الاعلاف"
            />
        <LinearLayout
            android:id="@+id/address_lyt"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/address_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4149e9"
                android:textSize="13sp"
                android:text="الرياض, الملكة العربية السعودية"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/placeholder_filled_point"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rating_lyt"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/address_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/rate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="4"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_gravity="center"
                />
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:numStars="5"
                style="@style/Widget.MaterialRatingBar.RatingBar.Small"
                android:id="@+id/ratingBar"
                android:layout_alignParentRight="true"
                android:rating="4"
                />

        </LinearLayout>
        <TextView
            android:textColor="#6b59ef"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التعليقات : 35"
            android:layout_below="@id/rating_lyt"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

</LinearLayout>